<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_window"
    android:orientation="vertical">

    <com.alcidae.smarthome.ir.widget.IrTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="@string/ir_preservation"
        android:textColor="@color/color_222222"
        android:textSize="20sp" />

    <com.alcidae.smarthome.ir.widget.IrEditText
        android:id="@+id/id_dialog_input_name_et"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit"
        android:paddingLeft="20dp" />

    <com.alcidae.smarthome.ir.widget.IrTextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/ir_dialog_input_name_hint" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="1dp">

        <com.alcidae.smarthome.ir.widget.IrButton
            android:id="@+id/id_dialog_input_name_cancel_btn"
            android:layout_width="118dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button_round2"
            android:text="@string/ir_cancel"
            android:textColor="@color/color_textPrimary"
            android:textSize="16sp" />

        <com.alcidae.smarthome.ir.widget.IrButton
            android:id="@+id/id_dialog_input_name_ok_btn"
            android:layout_width="118dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button_round2"
            android:text="@string/ir_ok"
            android:textColor="@color/color_textPrimary"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>