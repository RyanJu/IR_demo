<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@color/ir_bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/id_dialog_choose_area_close_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="15dp"
            android:src="@drawable/selector_close" />

        <ImageView
            android:id="@+id/id_dialog_choose_area_ensure_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:padding="13dp"
            android:src="@drawable/ir_select" />

        <com.alcidae.smarthome.ir.widget.IrTextView
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ir_choose_area" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_d9eeeff1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/id_dialog_choose_area_province_npv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="@color/color_d9eeeff1"
            app:npv_DividerHeight="1dp"
            app:npv_ShowCount="7"
            app:npv_TextColorNormal="@color/color_777777"
            app:npv_TextColorSelected="@color/color_222222"
            app:npv_TextSizeNormal="17sp"
            app:npv_TextSizeSelected="20sp" />

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/id_dialog_choose_area_city_npv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="@color/color_d9eeeff1"
            app:npv_DividerHeight="1dp"
            app:npv_ShowCount="7"
            app:npv_TextColorNormal="@color/color_777777"
            app:npv_TextColorSelected="@color/color_222222"
            app:npv_TextSizeNormal="17sp"
            app:npv_TextSizeSelected="20sp" />
    </LinearLayout>
</LinearLayout>