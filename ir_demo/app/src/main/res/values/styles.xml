<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- ir styles -->

    <style name="DialogBaseStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 去黑边 -->
        <item name="android:windowFrame">@android:color/transparent</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 悬浮 -->
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="FullScrennDialogStyle" parent="DialogBaseStyle">
        <item name="android:windowBackground">@color/transparent_85p</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="TitleBackImage">
        <item name="android:src">@drawable/btn_back_pre</item>
        <item name="android:padding">17dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
